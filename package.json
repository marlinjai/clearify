{
  "name": "clearify",
  "version": "1.5.0",
  "description": "An open-source documentation site generator. Turn markdown into beautiful docs.",
  "type": "module",
  "bin": {
    "clearify": "./bin/clearify.js"
  },
  "exports": {
    ".": {
      "types": "./dist/node/types/index.d.ts",
      "import": "./dist/node/types/index.js"
    },
    "./config": {
      "types": "./dist/node/core/config.d.ts",
      "import": "./dist/node/core/config.js"
    }
  },
  "files": [
    "bin",
    "dist",
    "src/client",
    "src/theme"
  ],
  "scripts": {
    "build": "tsup",
    "dev:self": "node bin/clearify.js dev"
  },
  "dependencies": {
    "@mdx-js/react": "^3.1.1",
    "@mdx-js/rollup": "^3.1.1",
    "@scalar/api-reference-react": "^0.8.52",
    "@shikijs/rehype": "^3.22.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.24",
    "cac": "^6.7.14",
    "clsx": "^2.1.1",
    "flexsearch": "^0.8.212",
    "globby": "^16.1.0",
    "gray-matter": "^4.0.3",
    "mermaid": "^11.0.0",
    "postcss": "^8.5.6",
    "react-router-dom": "^7.13.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-mdx-frontmatter": "^5.2.0",
    "shiki": "^3.22.0",
    "tailwindcss": "^4.1.18",
    "unist-util-visit": "^5.0.0",
    "vite": "^6.1.0",
    "zod": "^4.3.6"
  },
  "peerDependencies": {
    "puppeteer": ">=22.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "puppeteer": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "puppeteer": "^24.37.2",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  },
  "license": "MIT",
  "author": "MarlinJai",
  "repository": {
    "type": "git",
    "url": "https://github.com/marlinjai/clearify.git"
  },
  "homepage": "https://github.com/marlinjai/clearify",
  "bugs": {
    "url": "https://github.com/marlinjai/clearify/issues"
  },
  "keywords": [
    "documentation",
    "docs",
    "markdown",
    "mdx",
    "static-site-generator",
    "vite",
    "react",
    "mermaid",
    "openapi"
  ]
}
